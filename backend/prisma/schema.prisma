generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id    Int    @id @default(autoincrement())
  email String @unique
  hash  String

  @@map("customer")
}

model Product {
  id   Int    @id @default(autoincrement())
  name String

  @@map("product")
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("order")
}
